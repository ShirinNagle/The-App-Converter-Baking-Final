<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppConverterBakingFinal"
             x:Class="AppConverterBakingFinal.MainPage">

    <StackLayout>
         
        <Label  LineBreakMode="WordWrap"
            Margin="30"
        Text="Welcome to Baking converter app. This app will help you to easily convert from American recipes which primarily use cup measurements and imperial measurements. You will also be able to convert recipes using metric measurements into cup and imperial measurements. If your recipe lists large eggs, but you only have medium, that's no problem, this app converts from large eggs to medium eggs and vice versa. Click on the cupcake to go to conversions" 
           HorizontalOptions="CenterAndExpand"
           VerticalOptions="CenterAndExpand" />
        <Button x:Name="btnConvert" Text="Go to Conversion"
            Margin="40"        
                Clicked="btnConvert_Clicked"/>
        


        <!--Making the cupcake image clickable-->
        <Image x:Name="imageMain" Margin="0,0,0,20" >
             <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                      NumberOfTapsRequired="1"/>
            </Image.GestureRecognizers>
         </Image>

    </StackLayout>

</ContentPage>
