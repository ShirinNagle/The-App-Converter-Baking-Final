<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConverterBakingFinal.ScaleUpOrDownPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Scale up or down here"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="btnMainPage" Text="Go to Welcome"
            Margin="10, 5, 10, 0"
                Clicked="btnMainPage_Clicked"/>
            <Button x:Name="btnConvert" Text="Go to Conversion"
            Margin="10, 5, 10, 0"
                Clicked="btnConvert_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>